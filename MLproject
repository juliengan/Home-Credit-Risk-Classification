name: appBD

conda_env: conda.yml

entry_points:
    main:
        parameters:
            n_estimators: {type: int, default: 100}
            learning_rate: {type: int, default: 1}
            max_depth: {type: int, default: 1}
            random_state: {type: int, default: 0}
            tracking_uri: {type: string, default: "http://localhost:5000"}
    command: "python src/models/train_model.py {n_estimators} {learning_rate} {max_depth} {random_state} {tracking_uri}"